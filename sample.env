# -------------------------------------------------
# NetWatcher OSS - Environment Configuration
# Copy this file to .env and fill in the values
# -------------------------------------------------

# ----- Domain Configuration -----
# Used by Caddy for routing
API_DOMAIN=api.example.com          # Controller API domain
APP_DOMAIN=app.example.com          # Panel frontend domain
CONTROLLER_UPSTREAM=controller:8080 # Internal controller address
CLIENT_UPSTREAM=panel:3000          # Internal panel address

# ----- PostgreSQL -----
POSTGRES_IMAGE_TAG=17-alpine
POSTGRES_USER=netwatcher
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=netwatcher
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
# Alternative: use full DSN instead of individual vars
# POSTGRES_DSN=postgres://user:pass@host:5432/db?sslmode=disable

# ----- ClickHouse (Time-Series Data) -----
CLICKHOUSE_IMAGE_TAG=24.1
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=CHANGE_ME_CLICKHOUSE_PASSWORD
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_NATIVE_PORT=9000

# ----- Controller Secrets -----
JWT_SECRET=CHANGE_ME_RANDOM_32_CHAR_STRING
PIN_PEPPER=CHANGE_ME_RANDOM_PEPPER_STRING

# ----- Panel Configuration -----
# API endpoint the panel will use (publicly accessible URL)
CONTROLLER_ENDPOINT=https://api.example.com

# ----- Optional Debug Settings -----
# DEBUG=true
# GORM_LOG_LEVEL=info
